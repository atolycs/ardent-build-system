# Maintainer: Atolycs <win8.kagamine.len+atolycs@gmail.com>

pkgbase=ardent-os-release
pkgname=$pkgbase-amiya
pkgver=2022.12.31
pkgrel=0
pkgdesc='Ardent Linux os-release file'
arch=('any')
license=('GPL')
depends=('filesystem')
backup=('usr/lib/os-release')
source=('ardent-os-release.tar.gz::https://github.com/atolycs/ardent-os-release/archive/refs/heads/master.tar.gz')
makedepends=('tar' 'gzip')
provides=("$pkgbase")
sha256sums=('281146215d5071c3a85dd7ffd92253f3cfd2611dc79804b1f9196900639dd051')
conflicts=("$pkgbase")


_git_filepath="ardent-os-release-master"

prepare() {
  tar xvfz ardent-os-release.tar.gz
}

build() {
  cd $srcdir/$_git_filepath
  OS_NAME="Amiya" make 
}

package() {
  install -Dm644 $srcdir/$_git_filepath/os-release usr/lib/os-release
}

