pkgname=filesystem
pkgver=2022.10.18
pkgrel=1
pkgdesc='Base Ardent Linux files'
arch=('x86_64')
license=('GPL')
provides=("ardentlinux-${pkgname}")
url='https://archlinux.org'
depends=('iana-etc')
source=("filesystem.tar.gz::https://github.com/archlinux/svntogit-packages/archive/refs/heads/packages/${pkgname}.tar.gz")
sha256sums=('465dab7d10c318084e98d9068e5848e0077d23c23a3eea359ff4e6c364cd302e')
_gitrepo="svntogit-packages-packages-filesystem"

prepare() {
  tar xvf $pkgname.tar.gz
}

build() {
  _basedir=$(pwd)
  pwd
  cd $srcdir/$_gitrepo
  mv ./trunk ../$pkgname
  cd ../$pkgname
  patch -u ${_basedir}/$pkgname/PKGBUILD < ${_basedir}/../01_PKGBUILD_desc_change.patch
  updpkgsums
  makepkg --syncdeps --noconfirm --noarchive
}

package() {
 cp -ar $srcdir/$pkgname/pkg/$pkgname $pkgdir/
}

